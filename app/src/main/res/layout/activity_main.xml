<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <EditText
        android:id="@+id/currency1"
        android:layout_width="161dp"
        android:layout_height="54dp"
        android:autofillHints=""
        android:clickable="true"
        android:ems="10"
        android:focusable="true"
        android:hint="Input amount"
        android:inputType="number"
        app:layout_constraintBottom_toTopOf="@+id/currency2"
        app:layout_constraintEnd_toStartOf="@+id/currency1DropDown"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/currency2"
        android:layout_width="161dp"
        android:layout_height="54dp"
        android:autofillHints="VND"
        android:clickable="true"
        android:ems="10"
        android:focusable="true"
        android:hint="Output amount"
        android:inputType="number"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@id/currency2DropDown"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/currency1" />

    <Spinner
        android:id="@+id/currency1DropDown"
        android:layout_width="130dp"
        android:layout_height="43dp"
        app:layout_constraintBottom_toBottomOf="@+id/currency1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/currency1"
        app:layout_constraintTop_toTopOf="@+id/currency1" />

    <Spinner
        android:id="@+id/currency2DropDown"
        android:layout_width="130dp"
        android:layout_height="43dp"
        app:layout_constraintBottom_toBottomOf="@+id/currency2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/currency2"
        app:layout_constraintTop_toTopOf="@+id/currency2" />

    <TextView
        android:id="@+id/MSSV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="344dp"
        android:layout_marginTop="708dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="10dp"
        android:text="@string/_20225651"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="167dp"
        android:layout_height="151dp"
        android:layout_marginStart="87dp"
        android:layout_marginTop="47dp"
        android:layout_marginEnd="87dp"
        android:layout_marginBottom="47dp"
        app:layout_constraintBottom_toTopOf="@+id/currency2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/currency1"
        app:srcCompat="@drawable/convert_icon" />

</androidx.constraintlayout.widget.ConstraintLayout>